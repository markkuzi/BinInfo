<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:padding="10dp"
    tools:context=".presentation.fragments.binlist.AddNewBinFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_bin_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:boxBackgroundColor="@color/black"
        app:startIconTint="@color/black"
        app:boxStrokeColor="@color/black"
        android:hint="@string/enter_bin"
        app:hintTextColor="@color/black"
        app:boxStrokeWidthFocused="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bin_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black"
            app:backgroundTint="@color/teal_200"/>

    </com.google.android.material.textfield.TextInputLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/til_bin_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/add_new_binn"
        android:padding="5dp"
        android:background="@color/teal_200"/>


</androidx.constraintlayout.widget.ConstraintLayout>